					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);",
									"if (jsonData.token) {",
									"    pm.environment.set(\"accessToken\", jsonData.token);",
									"    console.log(\"Access token has been set\");",
									"} else {",
									"    console.error(\"No token found in response\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
